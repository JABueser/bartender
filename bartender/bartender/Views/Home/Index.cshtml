@model bartender.ViewModels.HomeIndexViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var drink in Model.Drinks)
        {
        <tr>
            <td>@drink.Id</td>
            <td>@drink.Name</td>  
            <td><a asp-action="Details" asp-route-id="@drink.Id">Details</a></td>
        </tr>
        }
    </table>
    <a asp-action="Create">Add Drinks</a>
</body>
</html>